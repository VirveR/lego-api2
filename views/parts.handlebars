{{> header}}

{{> navbar}}

<main class="col-md-8 justify-content-center">
    
    <h2>Parts</h2>
    <p>Showing all available parts.</p>
    {{#each parts}}
        <div class="part row">
            <img src="images/{{this.id}}.jpg" class="col-md-4 img-fluid smallImg">
            <div class="col-md-8">
                <h3>{{this.name}}, {{this.id}}</h3>
                <p>Produced: {{this.year}} - now</p>
                <button class="moreBtn" onclick="window.location = 'parts/{{this.id}}'">View inventory</button>
            </div>
        </div>
    {{/each}}

</main>

<aside class="col-md-2">
    <h3>Search</h3>
    Coming soon...
</aside>

{{> footer}}